

@{
    double total = 0;
    double vat = 0;
    if (Model != null)
    {
        if (Model.Count > 0)
        {
            foreach (CartItem cartItem in Model)
            {
                total += cartItem.Board.Price * cartItem.Amount;
            }
            vat = total * 0.2;
        }
    }
}

